<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= artist.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= artist.image %>">
            <div class="description">
                <p><%- artist.description %></p>        
            </div>
            <a class="ui orange basic button" href="/discography/<%= artist._id %>/edit">Edit</a>
            <form id="delete" action="/discography/<%= artist._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>